<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/whiteBackground"
        android:gravity="center">
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3pt">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:fallbackLineSpacing="false"
                android:background="@color/whiteBtn" android:id="@+id/btn1"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn2"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn3"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3pt">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:fallbackLineSpacing="false"
                android:background="@color/whiteBtn" android:id="@+id/btn4"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn5"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn6"/>
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="3pt">
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:fallbackLineSpacing="false"
                android:background="@color/whiteBtn" android:id="@+id/btn7"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn8"/>
        <Button
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:layout_marginLeft="3pt"
                android:background="@color/whiteBtn" android:id="@+id/btn9"/>
    </TableRow>
</TableLayout>